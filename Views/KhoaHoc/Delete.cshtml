@model TrungTamDaoTao.Models.KhoaHoc

@{
    ViewData["Title"] = "Xóa khóa học";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container mt-4">
    <h2>Xác nhận xóa khóa học</h2>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Bạn có chắc chắn muốn xóa khóa học này?</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã khóa học:</dt>
                <dd class="col-sm-9">@Model.MaKhoaHoc</dd>
                
                <dt class="col-sm-3">Tên khóa học:</dt>
                <dd class="col-sm-9">@Model.TenKhoaHoc</dd>
                
                <dt class="col-sm-3">Giảng viên:</dt>
                <dd class="col-sm-9">@Model.GiangVien</dd>
                
                <dt class="col-sm-3">Thời gian khai giảng:</dt>
                <dd class="col-sm-9">@Model.ThoiGianKhaiGiang.ToString("dd/MM/yyyy")</dd>
                
                <dt class="col-sm-3">Học phí:</dt>
                <dd class="col-sm-9">@Model.HocPhi.ToString("N0") VNĐ</dd>
                
                <dt class="col-sm-3">Số lượng học viên tối đa:</dt>
                <dd class="col-sm-9">@Model.SoLuongHocVienToiDa</dd>
            </dl>
            
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                Lưu ý: Việc xóa khóa học sẽ không thể khôi phục lại.
            </div>
            
            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="MaKhoaHoc" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>