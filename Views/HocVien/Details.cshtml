@model TrungTamDaoTao.Models.HocVien

@{
    ViewData["Title"] = "Chi tiết học viên";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h4 class="mb-4">Chi tiết học viên</h4>
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Mã học viên</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MaHocVien)</dd>
                                    
                                    <dt class="col-sm-4">Họ và tên</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HoTen)</dd>
                                    
                                    <dt class="col-sm-4">Ngày sinh</dt>
                                    <dd class="col-sm-8">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>
                                    
                                    <dt class="col-sm-4">Số điện thoại</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SoDienThoai)</dd>
                                    
                                    <dt class="col-sm-4">Email</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                                    
                                    <dt class="col-sm-4">Tài khoản</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TaiKhoan)</dd>
                                    
                                    <dt class="col-sm-4">Vai trò</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.VaiTro)</dd>
                                </dl>
                            </div>
                        </div>
                        
                        <h5 class="mt-4 mb-3">Danh sách khóa học đã đăng ký</h5>
                        
                        @if (Model.DangKyKhoaHoc != null && Model.DangKyKhoaHoc.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã khóa học</th>
                                            <th>Tên khóa học</th>
                                            <th>Ngày đăng ký</th>
                                            <th>Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.DangKyKhoaHoc)
                                        {
                                            <tr>
                                                <td>@item.MaKhoaHoc</td>
                                                <td>@item.KhoaHoc.TenKhoaHoc</td>
                                                <td>@item.NgayDangKy.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    @if (item.DaHuy)
                                                    {
                                                        <span class="badge bg-danger">Đã hủy</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">Đã đăng ký</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                Học viên chưa đăng ký khóa học nào.
                            </div>
                        }
                        
                        <div class="form-group mt-4">
                            <a asp-action="Edit" asp-route-id="@Model.MaHocVien" class="btn btn-primary">
                                <i class="fa fa-edit"></i> Chỉnh sửa
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>