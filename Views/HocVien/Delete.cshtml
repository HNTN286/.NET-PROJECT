@model TrungTamDaoTao.Models.HocVien

@{
    ViewData["Title"] = "Xác nhận xóa học viên";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h4 class="mb-4 text-danger">Xác nhận xóa học viên</h4>
                
                <div class="alert alert-warning">
                    <i class="fa fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa học viên này không?
                </div>
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Mã học viên</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MaHocVien)</dd>
                                    
                                    <dt class="col-sm-4">Họ và tên</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HoTen)</dd>
                                    
                                    <dt class="col-sm-4">Ngày sinh</dt>
                                    <dd class="col-sm-8">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>
                                    
                                    <dt class="col-sm-4">Số điện thoại</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SoDienThoai)</dd>
                                    
                                    <dt class="col-sm-4">Email</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                                    
                                    <dt class="col-sm-4">Tài khoản</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TaiKhoan)</dd>
                                </dl>
                            </div>
                        </div>
                        
                        <form asp-action="Delete" class="mt-4">
                            <input type="hidden" asp-for="MaHocVien" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Xác nhận xóa
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>