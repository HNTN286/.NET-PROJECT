<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trung Tâm Đào Tạo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrungTamDaoTao.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (!User.IsInRole("QuanTriVien"))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Trung Tâm Đào Tạo</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Dashboard">Quản Trị Hệ Thống</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!User.Identity.IsAuthenticated || !User.IsInRole("QuanTriVien"))
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        }
                        @if (!User.Identity.IsAuthenticated || !User.IsInRole("QuanTriVien"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="dangKyDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Khoá Học
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dangKyDropdown">
                                <li><a class="dropdown-item" asp-controller="DangKyKhoaHoc" asp-action="Index">Danh sách khóa học</a></li>
                                <li><a class="dropdown-item" asp-controller="DangKyKhoaHoc" asp-action="KhoaHocCuaToi">Khóa học của tôi</a></li>
                            </ul>
                        </li>
                        }
                        <!-- @if (User.IsInRole("HocVien"))
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="HocVien" asp-action="Profile">Trang cá nhân</a>
                        </li>
                        } -->
                        <!-- @if (User.IsInRole("HocVien"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="dangKyDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Khoá Học
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dangKyDropdown">
                                <li><a class="dropdown-item" asp-controller="DangKyKhoaHoc" asp-action="Index">Danh sách khóa học</a></li>
                                <li><a class="dropdown-item" asp-controller="DangKyKhoaHoc" asp-action="KhoaHocCuaToi">Khóa học của tôi</a></li>
                            </ul>
                        </li>
                        } -->
                        @if (User.IsInRole("QuanTriVien"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <!-- Menu quản lý học viên -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="hocVienDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Quản lý học viên
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="hocVienDropdown">
                                    <li><a class="dropdown-item" asp-controller="HocVien" asp-action="Index">Danh sách học viên</a></li>
                                    <li><a class="dropdown-item" asp-controller="HocVien" asp-action="Create">Thêm mới học viên</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="KhoaHoc" asp-action="Index"> Quản lý Khóa học</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="thongKeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Thống Kê
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="thongKeDropdown">
                                    <li><a class="dropdown-item" asp-controller="DangKyKhoaHoc" asp-action="ThongKe">Thống kê đăng ký</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="DoanhThuTheoKhoaHoc">Doanh thu theo khóa học</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="DoanhThuTheoThoiGian">Doanh thu theo thời gian</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Trung Tâm Đào Tạo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>