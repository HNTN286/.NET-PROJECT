@model IEnumerable<TrungTamDaoTao.ViewModels.ThongKeKhoaHocViewModel>

@{
    ViewData["Title"] = "Thống kê đăng ký khóa học";
}

<h1>Thống kê đăng ký khóa học</h1>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Biểu đồ thống kê đăng ký khóa học</h4>
            </div>
            <div class="card-body">
                <canvas id="khoaHocChart" width="100%" height="40"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Bảng thống kê chi tiết</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Mã khóa học</th>
                            <th>Tên khóa học</th>
                            <th>Thời gian khai giảng</th>
                            <th>Số lượng tối đa</th>
                            <th>Số lượng đã đăng ký</th>
                            <th>Số lượng đã hủy</th>
                            <th>Tỉ lệ đăng ký</th>
                            <th>Doanh thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaKhoaHoc</td>
                                <td>@item.TenKhoaHoc</td>
                                <td>@item.ThoiGianKhaiGiang.ToString("dd/MM/yyyy")</td>
                                <td>@item.SoLuongHocVienToiDa</td>
                                <td>@item.SoLuongHocVienDaDangKy</td>
                                <td>@item.SoLuongHocVienDaHuy</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: @(item.TiLeDangKy)%;" 
                                             aria-valuenow="@item.TiLeDangKy" aria-valuemin="0" aria-valuemax="100">
                                            @item.TiLeDangKy.ToString("0.0")%
                                        </div>
                                    </div>
                                </td>
                                <td>@item.DoanhThu.ToString("N0") VNĐ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-info">
                            <td colspan="4" class="text-end"><strong>Tổng:</strong></td>
                            <td><strong>@Model.Sum(x => x.SoLuongHocVienDaDangKy)</strong></td>
                            <td><strong>@Model.Sum(x => x.SoLuongHocVienDaHuy)</strong></td>
                            <td></td>
                            <td><strong>@Model.Sum(x => x.DoanhThu).ToString("N0") VNĐ</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart.js
        $(document).ready(function () {
            var ctx = document.getElementById('khoaHocChart').getContext('2d');
            var khoaHocChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.Select(x => $"'{x.TenKhoaHoc}'")))],
                    datasets: [
                        {
                            label: 'Số lượng học viên đã đăng ký',
                            data: [@string.Join(",", Model.Select(x => x.SoLuongHocVienDaDangKy))],
                            backgroundColor: 'rgba(54, 162, 235, 0.5)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Số lượng học viên tối đa',
                            data: [@string.Join(",", Model.Select(x => x.SoLuongHocVienToiDa))],
                            backgroundColor: 'rgba(255, 206, 86, 0.5)',
                            borderColor: 'rgba(255, 206, 86, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}